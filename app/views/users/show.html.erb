<% provide(:title, '勤怠表示') %>
<div>
  <table class = "table-bordered table-condensed">
    <tr>
      <td>
        <%= link_to "←", user_path(params: {id: @user.id, first_day: @first_day.prev_month }),
                        class: "btn btn-xs btn-primary" %>
        &emsp;<%= @first_day.to_s(:year_month) %>　時間管理表&emsp;
        <%= link_to "→", user_path(params: {id: @user.id, first_day: @first_day.next_month }),
                        class: "btn btn-xs btn-primary" %>
      </td>
      <td>指定勤務時間　<%= format_basic_time(@user.specified_time) %></td>
      <td>基本時間　<%= format_basic_time(@user.basic_time) %></td>
      <td>初日　<%= @first_day.to_s(:date) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.affiliation.present? ? @user.affiliation : "未設定" %></td>
      <td>氏名：<%= @user.name %></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締日　<%= @last_day.to_s(:date) %></td>
    </tr>
  </table>
  <table class = "table-bordered table-striped table-condensed">
    <thead>
      <tr> <!--rowspan:縦結合、colspan：横結合-->
        <th rowspan = "2">日付</th>
        <th rowspan = "2">曜日</th>
        <th colspan = "3">出社</th>
        <th colspan = "3">退社</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
      </tr>
    </thead>
  <!--!注意！この位置に</table>タグがあるはずです、削除してください-->  
<!--!注意！この位置に</div>タグがあるはずです、これも削除してください-->

<!--↓↓↓ここから先が今回記述するコード↓↓↓-->
    <tbody>
      <% (@works).each do |day| %>
        <tr>
          <td><%= day.to_s(:date) %></td>
          <td><%= %w{日 月 火 水 木 金 土}[day.wday] %></td>
          <td><%= day.attendance_time.to_s(:hour) if day.attendance_time.present? %></td>
          <td><%= day.attendance_time.to_s(:min) if day.attendance_time.present? %></td>
          <td>
            <% if day.day == Date.today && day.attendance_time.nil? %>
              <%= button_to "出社", user_works_path(@user), class: "btn btn-xs btn-primary" %>
            <% end %>
          </td>
          <td><%= day.leaving_time.to_s(:hour) if day.leaving_time.present? %></td>
          <td><%= day.leaving_time.to_s(:min) if day.leaving_time.present? %></td>
          <td>
            <% if day.day == Date.today && day.attendance_time.present? && day.leaving_time.nil? %>
              <%= button_to "退社", user_works_path(@user), class: "btn btn-xs btn-primary" %>
            <% end %>
          </td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>