<% provide(:title, '一覧') %>
<h1>ユーザ一覧</h1>

<section class="container">
<div class="col-md-3 col-md-offset-8 ">
<p>ユーザー名検索</p>
<%= form_tag(users_path, :method => 'get' ) do %>
  <%= text_field_tag :search %>
  <%= submit_tag '検索', :name => nil, class: "btn btn-primary" %>
<% end %>
</div>
</section>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>