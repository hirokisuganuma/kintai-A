  <div class="modal-dialog" role="document">
    <div class="modal-content">
    　<%= form_for base, :url => { :controller => :bases, :action => :base_update },method: :patch do |f| %>
      <div class="modal-header">
        <h3 class="modal-title" id="exampleModalLabel" style="display: inline-block;">拠点情報　【編集】</h3>
      </div>
        <div class="modal-body">
        <%= f.label :拠点番号 %>
        <%= f.text_field :number, class: 'form-control' %>
        <%= f.label :拠点名 %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.label :勤怠種類 %>
        <%= f.text_field :kind, class: 'form-control' %>
        <%= hidden_field_tag :id, base.id %>
        </div>
      <div class="modal-footer">
        <%= f.submit "追加", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>