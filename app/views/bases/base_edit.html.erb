<% provide(:title, '拠点情報の修正') %>

<h1>拠点一覧</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= render 'base_add_modal' %>
        <div class="modal fade" id="myModalLabel_edit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"></div>
    </div>
    <table class="table table-bordered working-table table-striped">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>拠点番号</th>
                <th>拠点名</th>
                <th>勤怠種類</th>
            </tr>
        </thead>
            <% @bases.each do |base| %>
            <tr>
                <td>
                    <%= link_to "編集", base_edit_modal_bases_path(id: base.id), method: :get, remote: true, class:"btn btn-primary" %>
                </td>
                <td>
                    <%= link_to "削除", base_delete_bases_path(id: base.id), class: "btn btn-primary", method: :delete,
                    data: { confirm: "本当に削除してもいいですか？" } %>
                </td>
                <td><%= base.number %></td>
                <td><%= base.name %></td>
                <td><%= base.kind %></td>
            </tr>
            <% end %>
    </table>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
        拠点情報の追加
        </button>
</div>
