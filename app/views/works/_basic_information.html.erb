  <tr>
    <td class="col-md-4 col-lg-4">
     <% if current_user.id == @user.id %> 
      <%= link_to "◀︎",work_url(params: { id: @user.id, first_day: @first_day.prev_month }), style:"color:white", class: 'btn btn-default btn-primary' %>
     <% end %>
